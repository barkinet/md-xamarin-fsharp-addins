<Addin id          = "FSharp.Android"
       namespace   = "MonoDevelop"
       name        = "F# Android development extension"
       author      = "Atsushi Eno"
       copyright   = "MIT X11"
       url         = "http://xamarin.com/android"
       description = "F# support extension to Xamarin Android applications."
       category    = "Mobile Development"
       version     = "4.0">

	<Dependencies>
		<Addin id="Core" version="4.0"/>
		<Addin id="Ide" version="4.0"/>
		<Addin id="Xamarin.Ide" version="4.0"/>
		<Addin id="MonoAndroid" version="4.0"/>
		<!-- FIXME: this needs to be updated to 4.0 -->
		<Addin id="FSharpBinding" version="3.2.12"/>
	</Dependencies>

	<Runtime>
		<Import file = "templates/fsharp/MonoDroidActivity.xft.xml" />
		<Import file = "templates/fsharp/MonoDroidApplication/AboutAssets.txt" />
		<Import file = "templates/fsharp/MonoDroidApplication/AboutResources.txt" />
		<Import file = "templates/fsharp/MonoDroidApplication/MainActivity.fs" />
		<Import file = "templates/fsharp/MonoDroidApplication/AssemblyInfo.fs" />
		<Import file = "templates/fsharp/MonoDroidApplication/Resource.fs" />
		<Import file = "templates/fsharp/MonoDroidApplication/Icon-hd.png" />
		<Import file = "templates/fsharp/MonoDroidApplication/Icon-ld.png" />
		<Import file = "templates/fsharp/MonoDroidApplication/Icon-md.png" />
		<Import file = "templates/fsharp/MonoDroidApplication/Main.axml" />
		<Import file = "templates/fsharp/MonoDroidApplicationProject.xpt.xml" />
		<Import file = "templates/fsharp/MonoDroidApplicationProjectLv12.xpt.xml" />
		<Import file = "templates/fsharp/MonoDroidApplicationProjectLv15.xpt.xml" />
		<Import file = "templates/fsharp/MonoDroidBroadcastReceiver.xft.xml" />
		<Import file = "templates/fsharp/MonoDroidClass.xft.xml" />
		<Import file = "templates/fsharp/MonoDroidFragment.xft.xml" />
		<Import file = "templates/fsharp/MonoDroidInterface.xft.xml" />
		<Import file = "templates/fsharp/MonoDroidLibraryProject.xpt.xml" />
		<Import file = "templates/fsharp/MonoDroidOpenGLProject.xpt.xml" />
		<Import file = "templates/fsharp/MonoDroidView.xft.xml" />
		<Import file = "templates/fsharp/OpenGLApplication/MainActivity.fs" />
		<Import file = "templates/fsharp/OpenGLApplication/GLView1.fs" />
		<Import file = "templates/fsharp/OpenGLApplication/Main.axml" />
		<Import file = "templates/fsharp/OpenGLApplication/Resource.fs" />
	</Runtime>

	<Extension path = "/MonoDevelop/Ide/FileTemplates">
		<FileTemplate id   = "FSharp.MonoDroidView"
		              file = "templates/fsharp/MonoDroidView.xft.xml"/>
		<FileTemplate id   = "FSharp.MonoDroidActivity"
		              file = "templates/fsharp/MonoDroidActivity.xft.xml"/>
		<FileTemplate id   = "FSharp.MonoDroidBroadcastReceiver"
		              file = "templates/fsharp/MonoDroidBroadcastReceiver.xft.xml"/>
		<FileTemplate id   = "FSharp.MonoDroidClass"
		              file = "templates/fsharp/MonoDroidClass.xft.xml"/>
		<FileTemplate id   = "FSharp.MonoDroidFragment"
		              file = "templates/fsharp/MonoDroidFragment.xft.xml"/>
		<FileTemplate id   = "FSharp.MonoDroidInterface"
		              file = "templates/fsharp/MonoDroidInterface.xft.xml"/>
	</Extension>

	<Extension path = "/MonoDevelop/Ide/ProjectTemplates">
		<ProjectTemplate id   = "FSharp.MonoDroidLibraryProject"
		                 file = "templates/fsharp/MonoDroidLibraryProject.xpt.xml" />
		<ProjectTemplate id   = "FSharp.MonoDroidApplicationProject"
		                 file = "templates/fsharp/MonoDroidApplicationProject.xpt.xml"/>
		<ProjectTemplate id   = "FSharp.MonoDroidApplicationLv12Project"
		                 file = "templates/fsharp/MonoDroidApplicationProjectLv12.xpt.xml"/>
		<ProjectTemplate id   = "FSharp.MonoDroidApplicationLv15Project"
		                 file = "templates/fsharp/MonoDroidApplicationProjectLv15.xpt.xml"/>
		<ProjectTemplate id   = "FSharp.MonoDroidOpenGLProject"
		                 file = "templates/fsharp/MonoDroidOpenGLProject.xpt.xml"/>
	</Extension>


	<Extension path = "/MonoDevelop/ProjectModel/MSBuildItemTypes">
		<DotNetProjectSubtype 
			guid="{F278D4AB-4730-4720-B08E-FE5E31564D9E}"
			type="MonoDevelop.MonoDroid.MonoDroidProject"
			useXBuild="true">
			<AddImport language="F#" projects="$(MSBuildExtensionsPath)\Xamarin\Android\Xamarin.Android.FSharp.targets" />
			<RemoveImport language="F#" projects="$(MSBuildExtensionsPath32)\FSharp\1.0\Microsoft.FSharp.Targets" />
		    <RemoveImport language='F#' projects="$(MSBuildExtensionsPath32)\..\Microsoft F#\v4.0\Microsoft.FSharp.Targets" />
		</DotNetProjectSubtype>
	</Extension>
</Addin>
